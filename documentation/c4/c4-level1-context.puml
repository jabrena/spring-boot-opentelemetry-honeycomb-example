Person(user, "User", "Calls API endpoints to test distributed tracing")
System(demo, "Spring Boot OTel Demo", "Multi-module Spring Boot demo for OpenTelemetry tracing with Honeycomb/Jaeger. Returns hello world from downstream services via gateway.")
System_Ext(otel_collector, "OTel Collector", "Receives OTLP traces from all services")
